.sidebar
  .sidebar__header
    %ul.sidebar__header__contents
      %li.sidebar__header__contents__list-user-name
        %h5
          Yusuke
      %li.sidebar__header__contents__list
        = link_to new_group_path, class: "sidebar__header__contents__list__icon" do
          = fa_icon "pencil-square-o"
        = link_to edit_user_path(current_user), class: "sidebar__header__contents__list__icon" do
          = fa_icon "cog"
  %ul.sidebar__contents
    = render @groups, partial: "groups/group"

